<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-header">
        <h1>Documentos de <span><%= @seller.company_name %></span></h1>
        <p>Aqui estão os documentos que você já nos enviou até o momento</p>
      </div>
    </div>
  </div>
</div>

<%= render "shared/documentsmenu" %>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @uploads.each do |name, upload| %>
        <% if upload.attached? %>
          <h3><%= name %></h3>
          <% if upload.class == ActiveStorage::Attached::One%>
           <%= render partial: "document_preview", locals: {upload: upload} %>
          <% elsif upload.class == ActiveStorage::Attached::Many %>
            <% upload.attachments.each do |upload_a| %>
              <%= render partial: "document_preview", locals: {upload: upload_a} %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>





