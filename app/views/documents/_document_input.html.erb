<label class="input-file">
  <p class="description"> <%= description %> </p>
  <% if upload.attached?  %>
    <i class="fa fa-check"></i>
  <% end %>
  <ul class="file-status"></ul>
  <span style="display:none;">
    <%= f.file_field(upload.name.to_sym, multiple: true, class: "inputfile") %>
  </span>
</label>
