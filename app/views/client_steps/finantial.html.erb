<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="client-form">
        <%= image_tag "porco.png", height: 100 %>
        <h2>Estamos a poucos passos de criar a sua conta...</h2>
        <div class="progress-bar">
          <span class="point done">1</span>
          <span class="bar bdone"></span>
          <span class="point active">2</span>
          <span class="bar"></span>
          <span class="point future">3</span>
          <span class="bar future"></span>
          <span class="point future">4</span>
        </div>
        <div class="client-infos">
          <%= simple_form_for @client, url: wizard_path, method: :put do |f| %>
          <%= f.error_notification %>
          <%= f.input :company_name, label: "Qual o nome da sua empresa nome?" %>

          <%= f.submit 'Continue' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
