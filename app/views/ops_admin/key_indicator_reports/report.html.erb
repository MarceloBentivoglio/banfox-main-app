<% end %>

<% unless @presenter.refins.empty? %>
  <div class="kir-container well pefin-refin"> 
    <% if @presenter.refins.count == 1 %>
      <h1>Único refin</h1> 
    <% else %>
      <h1>Últimos <%= @presenter.refins.count %> refins</h1> 
    <% end %>
    <table class="table"> 
      <tbody> 
        <% @presenter.refins.each do |refin| %>
          <tr>
            <td><%= refin[:date] %></td>
            <td><%= refin[:value] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% unless @presenter.pefins.empty? %>
  <div class="kir-container well pefin-refin"> 
    <% if @presenter.pefins.count == 1 %>
      <h1>Único pefin</h1> 
    <% else %>
      <h1>Últimos <%= @presenter.pefins.count %> pefins</h1> 
    <% end %>
    <table class="table"> 
      <tbody> 
        <% @presenter.pefins.each do |pefin| %>
          <tr>
            <td><%= pefin[:date] %></td>
            <td><%= pefin[:value] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<div style="clear:both;"></div>

<% unless @presenter.bankruptcies.empty? %>
  <div class="kir-container well"> 
    <% if @presenter.bankruptcies.count == 1 %>
      <h1>Único pedido de falência</h1> 
    <% else %>
      <h1>Últimos <%= @presenter.bankruptcies.count %> pedidos de falência</h1> 
    <% end %>
    <table class="table"> 
      <tbody> 
        <% @presenter.bankruptcies.each do |bank| %>
          <tr>
            <td><%= bank[:date] %></td>
            <td><%= bank[:kind] %></td>
            <td><%= bank[:origin] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<br />

<% unless @presenter.partners.empty? %>
  <% @presenter.partners.each do |partner| %>
    <% if partner[:finnancial_problems] %>
      <div class="kir-container well">
        <h1><%= partner[:name] %> possui</h1>
        <% unless partner[:lawsuits].empty? %>
          <% if partner[:lawsuits].count == 1 %>
            <h2>Única ação judicial</h2> 
          <% else %>
            <h2>Últimas <%= partner[:lawsuits].count %> ações judiciais</h2> 
          <% end %>
          <table class="table">
            <thead>
              <tr>
                <th>Data</th>
                <th>Valor</th>
                <th>Natureza da Operação</th>
              </tr>
            </thead>
            <tbody> 
              <% partner[:lawsuits].each do |lawsuit| %>
                <tr>
                  <td><%= lawsuit[:date] %></td>
                  <td><%= lawsuit[:value] %></td>
                  <td><%= lawsuit[:operation_nature] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <% unless partner[:protests].empty? %>
          <% if partner[:protests].count == 1 %>
            <h2>Único protesto</h2>
          <% else %>
            <h2>Últimos <%= partner[:protests].count %> protestos</h2>
          <% end %>
          <table class="table"> 
            <thead>
              <tr>
                <th>Data</th>
                <th>Valor</th>
                <th>Local</th>
              </tr>
            </thead>
            <tbody> 
              <% partner[:protests].each do |protest| %>
                <tr>
                  <td><%= protest[:date] %></td>
                  <td><%= protest[:value] %></td>
                  <td><%= protest[:location] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <% unless partner[:refins].empty? %>
          <% if partner[:refins].count == 1 %>
            <h1>Único refin</h1> 
          <% else %>
            <h1>Últimos <%= partner[:refins].count %> refins</h1> 
          <% end %>
          <table class="table"> 
            <thead>
              <tr>
                <th>Data</th>
                <th>Valor</th>
              </tr>
            </thead>
            <tbody> 
              <% partner[:refins].each do |refin| %>
                <tr>
                  <td><%= refin[:date] %></td>
                  <td><%= refin[:value] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <% unless partner[:pefins].empty? %>
          <% if partner[:pefins].count == 1 %>
            <h1>Único pefin</h1> 
          <% else %>
            <h1>Últimos <%= partner[:pefins].count %> pefins</h1> 
          <% end %>
          <table class="table"> 
            <thead>
              <tr>
                <th>Data</th>
                <th>Valor</th>
              </tr>
            </thead>
            <tbody> 
              <% partner[:pefins].each do |pefin| %>
                <tr>
                  <td><%= pefin[:date] %></td>
                  <td><%= pefin[:value] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <% unless partner[:bankruptcy_participations].empty? %>
          <% if partner[:bankruptcy_participations].count == 1 %>
            <h1>Única participação em falência</h1> 
          <% else %>
            <h1>Últimas <%= partner[:bankruptcy_participations].count %> participações em falências</h1> 
          <% end %>
          <table class="table"> 
            <thead>
              <tr>
                <th>Data</th>
                <th>Tipo</th>
                <th>Empresa</th>
              </tr>
            </thead>
            <tbody>
              <% partner[:bankruptcy_participations].each do |bank| %>
                <tr>
                  <td><%= bank[:date] %></td>
                  <td><%= bank[:type] %></td>
                  <td><%= bank[:company] %> - <%= bank[:cnpj] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        <% unless partner[:bad_checks].empty? %>
          <% if partner[:bad_checks].count == 1 %>
            <h1>Único pefin</h1> 
          <% else %>
            <h1>Últimos <%= partner[:bad_checks].count %> pefins</h1> 
          <% end %>
          <table class="table"> 
            <thead>
              <th>Data</th>
              <th>Cidade</th>
              <th>Valor</th>
              <th>Nº do Cheque</th>
            </thead>
            <tbody> 
              <% partner[:bad_checks].each do |bad_check| %>
                <tr>
                  <td><%= bad_check[:date] %></td>
                  <td><%= bad_check[:city] %></td>
                  <td><%= bad_check[:value] %></td>
                  <td><%= bad_check[:check_number] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    <% end %><!-- if finnancial_problems -->
  <% end %><!-- each partners -->
<% end %><!-- unless partners empty -->

<div class="kir-container-title">
  <h1>III. Informações de Processos Jurídicos</h1>
  <h2 <% if @presenter.lawsuits_tj[:total] > 0 %>class="alert-text"<% end %>>Empresa possui <%= @presenter.lawsuits_tj[:total] %> processos jurídicos </h2>
</div>

<div class="kir-container well">
  <% unless @presenter.lawsuits_tj[:per_partner].nil? %>
    <% @presenter.lawsuits_tj[:per_partner].each do |lawsuits| %>
      <% if !lawsuits.nil? && lawsuits.any? %>
        <h2>Processos Jurídicos de <%= lawsuits&.first[:name] %></h2>
        <table class="table">
          <thead>
            <tr>
              <th>Número do Processo</th>
              <th>Órgão</th>
              <th>Assunto</th>
              <th>Participação</th>
              <th>Valor</th>
            </tr>
          </thead>
          <tbody>
            <% lawsuits&.each do |lawsuit| %>
              <tr>
                <td><%= lawsuit[:number] %></td>
                <td><%= lawsuit[:court_name] %></td>
                <td><%= lawsuit[:main_subject] %></td>
                <td><%= lawsuit[:polarity] %></td>
                <td><%= lawsuit[:value] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    <% end %>
  <% end %>
</div>

