<center><h4 class="devise-greeting" ><%= t(".greeting") %></h4></center>

<%= simple_form_for(:signup, url: create_signup_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true ,
                label: "Indique seu email corporativo",
                input_html: { autocomplete: "email" }
    %>
    <%= f.error :corporate_email_validator, class: "invalid-feedback"  %>
    <%= f.input :password,
                required: true,
                label: "Crie uma Senha",
                hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                input_html: { autocomplete: "new-password" } 
    %>
    <%= f.input :full_name,
                required: true, 
                label: "Nome do UsuÃ¡rio", 
                input_html: { class: "full_name" }
    %>
    <%= f.input :mobile,
                required: true,
                label: "Telefone para contato",
                input_html: { class: "mobile" }
    %>
    <%= f.input :cnpj, required: true, label: "CNPJ", input_html: { class: "cnpj" } %>
    <%= f.error :cnpj_validator, class: "invalid-feedback"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_up"), class: "btn-sessions", onclick: "gtag_report_conversion()" %>
  </div>
<% end %>

<%= render "users/shared/links" %>


