    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="input-file-box">
          <%= simple_form_for @invoice do |f| %>
          <label class="input-file">
            <p id="demo">Selecione o arquivo XML</p>
            <span style="display:none;">
              <%= f.file_field :xml, id: "file", class: "inputfile"%>
            </span>
          </label>
          <%= f.submit 'Continue', class: "btn btn-file-upload"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  var input = document.getElementById( 'file' );
  var infoArea = document.getElementById( 'demo' );

  input.addEventListener( 'change', showFileName );

  function showFileName( event ) {
