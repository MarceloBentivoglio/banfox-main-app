<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="client-form">
        <ol class="breadcrumb">
          <li><%= link_to "Step 1", step1_wizard_path %></li>
          <li><%= link_to "Step 2", step2_wizard_path %></li>
          <li><%= link_to "Step 3", step3_wizard_path %></li>
          <li class="active">Step 4</li>
        </ol>

        <%= simple_form_for @client_wizard, as: :client_wizard, url: validate_step_wizard_path do |f| %>
        <%= f.error_notification %>

        <%= hidden_field_tag :current_step, 'step4' %>
        <%= f.input :cnpj %>

        <%= f.submit 'Finish' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
