<% tag_color = "color-go" if [Installment::INSTALLMENT_STATUS[0], Invoice::INVOICE_STATUS[1], Invoice::INVOICE_STATUS[2]].include? status %>
<% tag_color = "color-attention" if [Installment::INSTALLMENT_STATUS[1], Invoice::INVOICE_STATUS[0], Invoice::INVOICE_STATUS[3]].include? status %>
<% tag_color = "color-danger" if [Installment::INSTALLMENT_STATUS[2], Invoice::INVOICE_STATUS[4]].include? status %>
<% tag_color = "color-good" if [Installment::INSTALLMENT_STATUS[3], Installment::INSTALLMENT_STATUS[4], Invoice::INVOICE_STATUS[5], Invoice::INVOICE_STATUS[6], Invoice::INVOICE_STATUS[8]].include? status%>
<% tag_color = "color-lost" if [Installment::INSTALLMENT_STATUS[5], Invoice::INVOICE_STATUS[7], Invoice::INVOICE_STATUS[9]].include? status%>
<div class="<%= "#{tag_color} status-tag"%>" data-toggle="tooltip" title="<%= status %>">
  <i class="fa fa-circle" aria-hidden="true"></i>
</div>

