<div class="table-wo-bundle-row-content">
  <div class="content-col content-col-4  text-left">
    <span data-toggle="tooltip" title="" data-original-title="<%= invoice_installment_complete_number_mask(item.invoice.number, item.number) %>">
        <%= invoice_installment_partial_number_mask(item.invoice.number, item.number) %>
    </span>
  </div>
  <div class="content-col content-col-20 text-left"> <%= item.invoice.payer.company_name.mb_chars.titleize %></div>
  <div class="content-col content-col-7  text-left"> <%= l(item.ordered_at, format: "%d %b %y") %></div>
  <div class="content-col content-col-7  text-left"> <%= l(item.due_date, format: "%d %b %y") %></div>
  <div class="content-col content-col-4  text-center <%= "red" if item.overdue? %>">
    <% if item.overdue? %>
      <%= item.overdue_days %>
    <% else %>
      <%= item.outstanding_days %>
    <% end %>
  </div>
  <div class="content-col content-col-10 text-right"> <%= humanized_money_with_symbol item.value %></div>
  <div class="content-col content-col-9 text-right">
    <span>
      <%= humanized_money_with_symbol item.initial_fee %>
    </span>
  </div>
  <div class="content-col content-col-10 text-right">
    <span>
      <%= humanized_money_with_symbol item.initial_net_value %>
    </span>
  </div>
  <div class="content-col content-col-10 text-right">
    <% if item.overdue? %>
      <span class="red">
        <%= humanized_money_with_symbol item.delta_fee %>
      </span>
    <% else %>
      <span class="green">
        <%= humanized_money_with_symbol item.delta_fee %>
      </span>
    <% end %>
  </div>
  <div class="content-col content-col-5 text-left">
    <%= render partial: "shared/tables/table_wo_bundle_ops/status_tag", locals: {status: item.status} %>
  </div>
  <div class="content-col content-col-5 text-left">
    <span> <%= link_to "Paga", report_paid_ops_admin_installment_path(item) %> </span>
  </div>
</div>
