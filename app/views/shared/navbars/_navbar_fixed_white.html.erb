<div class="navbar-parent">
  <div id="navbar-sections-container">
    <div class="section-left">
      <!-- Logo -->
      <%= link_to root_path do %>
        <div class="logo-mvp-pic-name"></div>
      <% end %>
    </div>

    <div class="section-middle hidden-xs hidden-sm">
      <!-- Links when logged in -->
      <%= link_to sellers_dashboard_path, class: "navbar-section-item navbar-section-item-link" do %>
        <i class="fa fa-laptop"></i>
        <span>Minha área</span>
      <% end %>

      <%= link_to store_invoices_path, class: "navbar-section-item navbar-section-item-link" do %>
        <i class="fa fa-line-chart"></i>
        <span>Títulos</span>
      <% end %>
    </div>

    <div class="section-right hidden-xs hidden-sm">
      <%= render(partial: "shared/buttons/btn_rounded_upload_invoice", locals: {button_path: "#", content: "Adicionar notas fiscais"}) %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-section-item">
        <div class="dropdown">
          <a id="mvp-menu" href="#" data-toggle="dropdown" class="navbar-section-item-link">
            <i class="fa fa-user-circle"></i>
            <span class="profile-name"> <%= @seller.company_nickname || @seller.company_name %> </span>
          </a>
          <ul class="dropdown-menu dropdown-menu-right mvp-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>




  </div> <!-- navbar-sections-container -->
</div>

<%= render partial: "shared/modals/modal_file_upload" %>
