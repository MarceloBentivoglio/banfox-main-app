<%= link_to button_path do %>
  <div class="small-dash-card small-dash-card-link">
    <div class="dash-card-title">
      <span><%= title %></span>
      <% if checked %>
        <div class="dash-card-checked-icon">
          <i class="fa fa-check-circle"></i>
        </div>
      <% else %>
        <p><%= actual_phase %></p>
        <div class="dash-card-icon">
          <i class="fa fa-circle-o"></i>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
