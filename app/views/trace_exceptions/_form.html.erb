
<%= simple_form_for(@trace_exception) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :message %>
    <%= f.input :trace %>
    <%= f.input :instance_variables %>
    <%= f.input :instance_variable_names %>
    <%= f.input :rack_session %>
    <%= f.input :request_method %>
    <%= f.input :query_hash %>
    <%= f.input :request_params %>
    <%= f.input :query_params %>
    <%= f.input :path %>
    <%= f.input :env %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
