<%= render partial: "shared/header", locals: {
  title: "Bem vindo!",
  sub_title: "",
  company_name: "",
} %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <%= render partial: "shared/dash_cards/small_status_dash_card", locals: {
        title: "Cadastrar empresa",
        tag: "",
        checked: true,
        button_path: "#",
      } %>
    </div>
    <div class="col-sm-12 col-md-4">
      <%= render partial: "shared/dash_cards/small_status_dash_card", locals: {
        title: "Adicionar documentos",
        tag: "Etapa a completar",
        checked: @seller.documentation_completed?,
        button_path: new_document_path,
      } %>
    </div>
    <div class="col-sm-12 col-md-4">
      <%= render partial: "shared/dash_cards/small_status_dash_card", locals: {
        title: "Adicionar títulos",
        tag: "Etapa a completar",
        checked: @seller.invoices.count > 0,
        button_path: new_invoice_path,
      } %>
    </div>
  </div>
  <% if @seller.approved? %>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: "shared/dash_cards/dash_section_header", locals: {
          title: "Novas operações",
          optional_button: render(partial: "shared/rounded_button", locals: {button_path: new_invoice_path, content: "Subir mais títulos para análise"}),
        } %>
        <div class="row">
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_progressbar_dash_card", locals: {
              title: "Limite operacional",
              left_data: @seller.used_limit,
              right_data: @seller.operation_limit,
              left_legend: "Utilizado",
              right_legend: "Disponível",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Títulos em análise",
              primary_content: Invoice.total(:in_analysis, @seller),
              secondary_content: Invoice.quant(:in_analysis, @seller),
              aux_content: "",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Títulos aprovados",
              primary_content: Invoice.total(:approved_all, @seller),
              secondary_content: Invoice.quant(:approved_all, @seller),
              aux_content: "",
            } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: "shared/dash_cards/dash_section_header", locals: {
          title: "Títulos a vencer",
          optional_button: nil,
        } %>
        <div class="row">
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Hoje",
              primary_content: Invoice.total(:opened_today, @seller),
              secondary_content: Invoice.quant(:opened_today, @seller),
              aux_content: "",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Essa semana",
              primary_content: Invoice.total(:opened_week, @seller),
              secondary_content: Invoice.quant(:opened_week, @seller),
              aux_content: "",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Esse mês",
              primary_content: Invoice.total(:opened_month, @seller),
              secondary_content: Invoice.quant(:opened_month, @seller),
              aux_content: "",
            } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: "shared/dash_cards/dash_section_header", locals: {
          title: "Títulos atrasados",
          optional_button: nil,
        } %>
        <div class="row">
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Há menos de 7 dias",
              primary_content: Invoice.total(:overdue_upto_7, @seller),
              secondary_content: Invoice.quant(:overdue_upto_7, @seller),
              aux_content: "",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Há mais de 7 dias e menos de 1 mês",
              primary_content: Invoice.total(:overdue_upto_30, @seller),
              secondary_content: Invoice.quant(:overdue_upto_30, @seller),
              aux_content: "",
            } %>
          </div>
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Há mais de 1 mês",
              primary_content: Invoice.total(:overdue_30_plus, @seller),
              secondary_content: Invoice.quant(:overdue_30_plus, @seller),
              aux_content: "",
            } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render partial: "shared/dash_cards/dash_section_header", locals: {
          title: "Títulos liquidados",
          optional_button: nil,
        } %>
        <div class="row">
          <div class="col-sm-12 col-md-4">
            <%= render partial: "shared/dash_cards/small_info_dash_card", locals: {
              title: "Histórico",
              primary_content: Invoice.total(:settled, @seller),
              secondary_content: Invoice.quant(:settled, @seller),
              aux_content: "",
            } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
