    <div class="container">
      <ul class="list-unstyled font-size-m">
        <li>
          <i class="fa fa-check-circle color-ok"></i>
          Cadastro
        </li>
        <li>
          <% if @documents_ok %>
            <i class="fa fa-check-circle color-ok"></i>
          <% else %>
            <i class="fa fa-times-circle color-atention"></i>
